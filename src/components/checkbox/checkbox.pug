

mixin checkbox(options)
	if !options
		- options = {}
	
	if !options.text
		- options.text = ''

	if !options.classes
		- options.classes = ''
	
	if !options.id
		- options.id = ''

	if !options.name
		- options.name = ''

	if !options.value
		- options.value = ''


	label.checkbox(class = options.classes, id = options.id)
		input(
			type = "checkbox", 
			name = options.name, 
			value = options.value, 
			checked = options.checked ? "checked" : false
		).checkbox__input

		div.checkbox__view
		div.checkbox__text-wrapper
			if options.title
				p.checkbox__title #{options.title}
				p.checkbox__text-small #{options.text}
			else
				if options.text
					p.checkbox__text #{options.text}