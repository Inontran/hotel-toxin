//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.group - Группа раскрывающихся списков. 
    Если задать этот параметр с одинаковым значением у нескольких списков,
    то при раскрытии одного списка все остальные из этой группы будут закрываться.
  options.text - Текст в кнопке раскрывающего списка.

mixin collapse(options)
  if !options
    - options = {}

  if !options.classes
    - options.classes = ''

  if !options.group
    - options.group = ''

  if !options.text
    - options.text = ''

  div.collapse(
    class = options.classes,
    id = options.id ? options.id : false
    data-group = options.group
  )
    button.collapse__btn(type = 'button')
      span.collapse__btn-text #{options.text}
      span.collapse__btn-arrow
    div.collapse__content
      div.collapse__content-wrapper
        block
