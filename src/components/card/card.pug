//-
  options.classes - Классы блока.
  options.id - ИД блока.

mixin card(options)
  if !options
    - options = {}
  
  if !options.classes
    - options.classes = ''

  div.card(
    class = options.classes,
    id = options.id ? options.id : false
  )
    if options.title
      h1.card__title #{options.title}
    block