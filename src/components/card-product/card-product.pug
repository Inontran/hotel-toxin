include ../rate-btn/rate-btn

//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.roomNumber - Номер апартаментов.
  options.roomType - Тип апартаментов (люкс).
  options.price - Стоимость апартаментов.
  options.priceTime - Пометка "в сутки" или "в неделю".
  options.countReviews = '0' - Количество отзывов.
  options.rating = '0' - Оценка или рейтинг апартаментов.
  options.gallery - Галерея картинок.
  options.gallery[0] - Путь до картинки.

mixin card-product(options)
  if !options
    - options = {}

  if !options.classes
    - options.classes = ''

  if !options.id
    - options.id = ''

  if !options.roomNumber
    - options.roomNumber = ''

  if !options.price
    - options.price = ''

  if !options.priceTime
    - options.priceTime = ''

  if !options.countReviews
    - options.countReviews = '0'

  if !options.rating
    - options.rating = '0'


  div.card-product(class = options.classes, id = options.id)
    div.card-product__gallery
      //- div.card-product__carousel.owl-carousel
        //- - for(var i = 0; i < 4; i++)
        //-     div.card-product__img(style = 'background-image: url(' + require('@/components/card-product/img/example.jpg').default + ' );')
      if options.gallery
        div.card-product__carousel.js-card-product__carousel.owl-carousel
          each val, index in options.gallery
            div.card-product__img(style = 'background-image: url(' + val + ' );')
    div.card-product__content
      div.card-product__content-top
        div.card-product__content-top-left
          span.card-product__content-top-symbol № 
          span.card-product__content-top-number #{options.roomNumber}
          if options.roomType
            span.card-product__content-top-type  #{options.roomType}
        div.card-product__content-top-right
          span.card-product__content-top-price #{options.price}
          span.card-product__content-top-price-type  #{options.priceTime}
      div.card-product__content-bottom
        div.card-product__content-bottom-left
          +rate-btn({
            value: options.rating, 
            disabled: true
          })
        div.card-product__content-bottom-right
          span.card-product__reviews-count-number #{options.countReviews}
          span.card-product__reviews-count-text  Отзывов