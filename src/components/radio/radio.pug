

mixin radio(options)
	if !options
		- options = {}
	
	if !options.text
		- options.text = ''

	if !options.classes
		- options.classes = ''
	
	if !options.id
		- options.id = ''

	if !options.name
		- options.name = ''

	label.radio(class = classes, id = options.id)
		input(
			type = "radio", 
			name = options.name, 
			checked = options.checked ? "checked" : false
		).radio__input
			
		div.radio__view
		if options.text
			div.radio__text #{options.text}