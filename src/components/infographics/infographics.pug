//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.items - Массив с текстом и иконками.
  options.items[0].src - Путь до иконки.
  options.items[0].title - Заголовок.
  options.items[0].text - Текст.
  options.items[0].line - Линия.

mixin infographics(options = {})
  -
    const {
      classes = '',
      id = false,
      items = [],
    } = options;

  ul.infographics(
    class = classes,
    id = id ? id : false
  )
    each item, index in items
      if (item.line)
        -var modifierItem = 'infographics__item_with-line'
      else
        -var modifierItem = ''

      li.infographics__item(class = modifierItem)
        if item.src
          //- div.infographics__image(
          //-   style = 'background-image: url(' + item.src + ')'
          //- )
          div.infographics__icon-wrapper
            img.infographics__icon(
              src = item.src,
              alt = item.title,
            )
        div.infographics__text-wrapper
          p.infographics__title #{item.title}
          p.infographics__text #{item.text}

