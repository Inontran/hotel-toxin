//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.items - Массив пуктов списка.
  options.items[0] - Текст.

mixin list(options)
  if !options
    - options = {}

  if !options.classes
    - options.classes = ''

  if !options.items
    - options.items = []


  ul.list(
    class = options.classes,
    id = options.id ? options.id : false
  )
    each val in options.items
      li.list__item #{val}