include ../header/header

//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.bg_url - Фоновая картинка.

mixin first-display(options)
  if !options
    - options = {}

  if !options.classes
    - options.classes = ''

  if !options.id
    - options.id = ''


  div.first-display(
    class = options.classes, 
    id = options.id,
    style = options.bg_url ? 'background-image: url(' + options.bg_url + ')' : false
  )
    +header({
      menuItems: data_header.menuItems, 
      button_login_text: data_header.login_text,
      button_login_href: data_header.login_href,
      button_reg_text: data_header.reg_text,
      button_reg_href: data_header.reg_href
    })

    div.first-display__content-wrapper
      block