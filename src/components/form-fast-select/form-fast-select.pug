include ../dropdown/dropdown
include ../air-datepicker/air-datepicker
include ../button/button
include ../card/card

//-
  options.classes - Классы блока.
  options.id - ИД блока.
  options.cardTitle - Заголовок.

mixin form-fast-select(options = {})
  -
    const {
      classes = '',
      id = false,
      cardTitle = 'Найдём номера под ваши пожелания',
    } = options;

  section.form-fast-select(
    class = classes,
    id = id ? id : false
  )
    +card({title: cardTitle})
      div.form-fast-select__block-wrapper.form-fast-select_mb20
        +dropdown({
          customContent: true,
          classes: 'dropdown_dates',
          group: 'formFastSelect',
          inputParams: {
            label: "Прибытие",
            readonly: true,
            placeholder: "ДД.ММ.ГГГГ",
            classes: 'js-input_result-date-start'
          },
          inputParams2: {
            label: "Выезд",
            readonly: true,
            placeholder: "ДД.ММ.ГГГГ",
            classes: 'js-input_result-date-end'
          },
        })
          +air-datepicker({classes: 'air-datepicker_inline'})

      div.form-fast-select__block-wrapper.form-fast-select_mb30
        +dropdown({
          group: 'formFastSelect',
          inputParams:{
            label: "Гости",
            readonly: true,
            value: "Сколько гостей",
          }
        })
          +list-counters({
            textDefault: "Сколько гостей",
            textOne: " гость",
            textMany: " гостей",
            arrayCounters: [
              {label: "Взрослые", inputName: ""},
              {label: "Дети", inputName: ""},
              {label: "Младенцы", inputName: ""}
            ]
          })

      +button({text: "Подобрать номер", classes: "button_fill button_arrow-left button_wide"})