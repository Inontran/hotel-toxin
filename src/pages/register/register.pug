extends ../../shared/base/base.pug

include ../../components/header/header
include ../../components/first-display/first-display
include ../../components/form/site-registration/site-registration

block headTags
  -
    const {
      title = '',
      description = '',
      keywords = '',
    } = htmlWebpackPlugin.options.getData();
  title #{title}
  meta(name='description', content = description)
  meta(name='keywords', content = keywords)

block header 
  +header()

block content
  - data = htmlWebpackPlugin.options.getData();
  - data.firstDisplayOptions.bgUrl = require('@/pages/login/img/' + data.firstDisplayOptions.bgUrl).default;
  -
    const {
      formOptions = {},
      firstDisplayOptions = {},
    } = data;

  +first-display(firstDisplayOptions)
    +site-registration(formOptions)

block footer
  +footer()