extends ../base/base.pug

include ../../components/first-display/first-display
include ../../components/form-login/form-login

block title
  | Registration Toxin Hotel

block content
  - data = htmlWebpackPlugin.options.getData()
  - data.firstDisplayOptions.bgUrl = require('@/pages/login/img/' + data.firstDisplayOptions.bgUrl).default
  -
    const {
      formOptions = {},
      firstDisplayOptions = {},
    } = data;

  +header({
    menuItems: dataHeader.menuItems, 
    buttonLoginText: dataHeader.loginText,
    buttonLoginHref: dataHeader.loginHref,
    buttonRegText: dataHeader.regText,
    buttonRegHref: dataHeader.regHref
  })

  +curtain({
    menuItems: dataHeader.menuItems, 
    buttonLoginText: dataHeader.loginText,
    buttonLoginHref: dataHeader.loginHref,
    buttonRegText: dataHeader.regText,
    buttonRegHref: dataHeader.regHref
  })

  main.page__main
    +first-display(firstDisplayOptions)
      div.first-display__form-wrapper
        +form-login(formOptions)