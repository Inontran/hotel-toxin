extends ../base/base.pug

include ../../components/form-booking/form-booking
include ../../components/infographics/infographics
include ../../components/review/review
include ../../components/list/list
include ../../components/chart/chart

block title
  | Номер 888 Toxin Hotel

block content
  - data = htmlWebpackPlugin.options.getData()

  div.product
    +header({
      menuItems: dataHeader.menuItems, 
      buttonLoginText: dataHeader.loginText,
      buttonLoginHref: dataHeader.loginHref,
      buttonRegText: dataHeader.regText,
      buttonRegHref: dataHeader.regHref
    })
    +curtain({
      menuItems: dataHeader.menuItems, 
      buttonLoginText: dataHeader.loginText,
      buttonLoginHref: dataHeader.loginHref,
      buttonRegText: dataHeader.regText,
      buttonRegHref: dataHeader.regHref
    })

    div.product__gallery
      if !data.gallery[0]
        - data.gallery[0] = ''
      if !data.gallery[1]
        - data.gallery[1] = ''
      if !data.gallery[2]
        - data.gallery[2] = ''
      div.product__gallery-item.product__gallery-item_first(style="background-image: url(" + data.gallery[0] + ");")
      div.product__gallery-item.product__gallery-item_second(style="background-image: url(" + data.gallery[1] + ");")
      div.product__gallery-item.product__gallery-item_third(style="background-image: url(" + data.gallery[2] + ");")

    div.product__carousel.js-product__carousel.owl-carousel
      if !data.gallery[0]
        - data.gallery[0] = ''
      if !data.gallery[1]
        - data.gallery[1] = ''
      if !data.gallery[2]
        - data.gallery[2] = ''
      div.product__carousel-item(style="background-image: url(" + data.gallery[0] + ");")
      div.product__carousel-item(style="background-image: url(" + data.gallery[1] + ");")
      div.product__carousel-item(style="background-image: url(" + data.gallery[2] + ");")

    div.product__body
      div.product__body-row
        div.product__body-col.product__body-col-1
          div.product__grid-3
            div.product__grid-3-col.product__grid-3-col-1.product_mb40
              if data.optionsInfographics
                h2.product__title Сведения о номере
                +infographics(data.optionsInfographics)
            if data.chartCountAll
              div.product__grid-3-col.product__grid-3-col-2.product_mb40
                h2.product__title Впечатления от номера
                +chart({
                  chartCountAll: data.chartCountAll,
                  chartNumAwesome: data.chartNumAwesome,
                  chartNumGood: data.chartNumGood,
                  chartNumNotbad: data.chartNumNotbad,
                  chartNumDisappointed: data.chartNumDisappointed,
                })
          
          if data.reviews
            div.product_mb40
              h2.product__title Отзывы посетителей номера
              each val, index in data.reviews
                div.product_mb20
                  +review(val)

          div.product__grid-3
            div.product__grid-3-col.product__grid-3-col-1.product_mb40
              if data.rulesTitle
                h2.product__title #{data.rulesTitle}
              if data.optionsRules
                +list(data.optionsRules)
            div.product__grid-3-col.product__grid-3-col-2.product_mb40
              if data.cancelTitle
                h2.product__title #{data.cancelTitle}
              if data.cancelText
                p.product__text #{data.cancelText}

        div.product__body-col.product__body-col-2
          +form-booking({
            roomNumber: data.roomNumber,
            roomType: data.roomType,
            price: data.price,
            priceTime: data.priceTime,
            listService: data.listService,
            totalPrice: data.totalPrice
          })